function table.random_old(tTable)
	local iSize = 0
	local tValues = {}
	local tSwapTable = {}
	for Key, Value in pairs(tTable) do
		iSize = iSize + 1
		tValues[iSize] = Value
		tSwapTable[iSize] = Key
	end
	if iSize > 0 then
		local iRandom = math.random(1, iSize)
		return  tSwapTable[iRandom], tValues[iRandom]
	end
end

