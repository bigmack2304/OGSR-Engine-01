--[[
	Функция проверки существования секции или ключа в секции
	Автор: Real Wolf
--]]
function Exist(oIni, sMode, sSection, sLine)
	local oIni = oIni
	if sMode == "Section" then
		return oIni:section_exist(sSection)
	elseif sMode == "Line" then
		return oIni:line_exist(sSection, sLine)
	end
	return nil
end

--[[
	Функция чтения из конфига значений(string, float, boolean)
	Автор: Real Wolf
--]]
function ReadLine(oIni, sMode, sSection, sLine, Value)
	if Exist(oIni, "Line", sSection, sLine) then
		if sMode == "String" then
			return tostring(oIni:r_string(sSection, sLine) )
		elseif sMode == "Number" then
			return tonumber(oIni:r_float(sSection, sLine) )
		elseif sMode == "Boolean" then
			return oIni:r_bool(sSection, sLine)
		end
	end
	return Value
end

