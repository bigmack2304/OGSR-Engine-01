function DelObj(Value)
	if Value then
		local oServerObj = Value
		if type(Value) == "number" then
			oServerObj = alife():object(Value)
			
		elseif type(Value) == "userdata" then
			if not IsServerObj(Value) then
				oServerObj = alife():object(Value:id() )
			end
		end
		
		if type(oServerObj) == "userdata" then
			if IsServerObj(oServerObj) then
				alife():release(oServerObj, true)
			end
		end
	end
end

