--[[
	Меняет ключ и значение местами во всей таблице.
	Либо, если указан 2 параметр, возвращает ключ, который
	соответствует данному значению.
	Автор: Real Wolf
--]]
local tAllowedTypes = {
	["number"] = true,
	["string"] = true
}

function table.swap(tTable, ValueFind)
	if ValueFind and not tAllowedTypes[type(ValueFind)] then
		return
	end
	
	local tNewTable = {}
	for Key, Value in pairs(tTable) do
		if tAllowedTypes[type(Value)] then
			if ValueFind and ValueFind == Value then
				return Key
			end
			tNewTable[Value] = Key
		end
	end
	
	return tNewTable
end

