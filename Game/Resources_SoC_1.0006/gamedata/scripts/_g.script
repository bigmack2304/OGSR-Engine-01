--переводит h из диапозона omin-omax в h в диапозоне nmin-nmax
function addon_map_float(h,omin,omax,nmin,nmax)
local hisl = h
local orig_min = omin
local orig_max = omax
local new_min = nmin
local new_max = nmax
local shkal_orig = 0
local shkal_new = 0
local new_hisl = 0

shkal_orig = orig_max - orig_min
shkal_orig = shkal_orig/100
shkal_orig = (hisl - orig_min)/shkal_orig

if new_max > new_min then
    shkal_new = new_max - new_min
else
    shkal_new = new_min - new_max
end

shkal_new = shkal_new/100
new_hisl = shkal_new * shkal_orig
new_hisl = new_hisl + new_min
 
return new_hisl

end

