function SplitString(sStr, Mode, sDiv, sPattern)
    local tRet = {}
    local sPatt
    if sDiv and  not sPattern then
		sPatt = '%s*([^'..sDiv..']+)%s*'
    elseif not sDiv and  sPattern then 
		sPatt = sPattern
    else
		sPatt = '[%w%_]+'
    end
    if Mode == nil then 
        for sValue in sStr:gmatch(sPatt) do
            table.insert(tRet, sValue)
        end
    elseif Mode == true then 
        for sValue in sStr:gmatch(sPatt) do
            tRet[sValue] = true
        end
    elseif type(Mode) == "number" then 
        for sValue in sStr:gmatch(sPatt) do
			tRet[#tRet+1] = tonumber(sValue) or sValue
        end
    end
	return tRet
end

